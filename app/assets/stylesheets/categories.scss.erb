// ttps://stackoverflow.com/questions/3942878/how-to-decide-font-color-in-white-or-black-depending-on-background-color#3943023
// https://www.w3.org/TR/WCAG20/#relativeluminancedef
// https://www.w3.org/TR/WCAG20/#contrast-ratiodef
@function brightness($c) {
   $r: red($c)/255;
   $g: green($c)/255;
   $b: blue($c)/255;
   @return 0.2126 * $r + 0.7152 * $g + 0.0722 * $b;
}

@function set-category-text-color($color) {
  @if (brightness($color) > 0.179) {
    @return #000000;
  } @else {
    @return #ffffff;
  }
}

<% Category.all.each do |ctgy| %>
.<%= CategoriesHelper::css_class_name ctgy %> {
  color: set-category-text-color(<%= ctgy.color %>);
  background-color: <%= ctgy.color %>;
  margin: brightness(<%= ctgy.color %>);
}
<% end %>
