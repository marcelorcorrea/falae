<div class="items">
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>

  <p>
    &nbsp;
    <%= link_to new_user_item_path(@user), class: 'button-box' do %>
      <%= fa_icon 'plus-circle' %><%= t '.new' %>
    <% end %>

    <%= link_to destroy_multiple_user_items_path(@user, ids: ''), method: :delete,
      id: 'items-delete-button', class: 'button-box destroy disabled',
      data: { confirm: t('.destroy_multiple_alert') } do %>
      <%= fa_icon 'trash-o' %><%= t '.delete' %>
    <% end %>
  </p>

  <% if @items.present? %>
    <div class="items-list">
      <% @items.each do |item| %>
        <% if item.private? %>
          <%= render 'items/item', item: item %>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <p><%= t '.none' %></p>
  <% end %>
</div>
