<div class="overlay">
  <div class="search-item">
    <a class="close">
      <%= fa_icon 'times-circle-o', class: :default %>
      <%= fa_icon 'times-circle', class: :hover %>
    </a>
    <p class="add-item-title"><%= t 'views.add_item' %></p>
    <div class="form-box">
      <%= form_with url: search_item_user_spreadsheet_page_path(@user, @spreadsheet, @page),
          id: 'search-items' , method: :get do |form| %>
        <div class="field">
          <%= form.label Item.human_attribute_name :name %>
          <%= form.text_field :name, id: :item_name %>
        </div>
        <div class="actions">
          <%= form.button :submit, name: :search do %>
            <%= fa_icon 'search'%><%= t 'views.search' %>
          <% end %>
        </div>
      <% end %>
    </div>
    <div id="search-items-result">
    </div>
  </div>
</div>
